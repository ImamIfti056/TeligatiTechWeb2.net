@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="container identity">
    <div>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-container">
            <h1>Create New Account</h1>
            <div asp-validation-summary="ModelOnly" role="alert" class="msg"></div>
            <div>
                <label asp-for="Input.Email">Email</label>
                <input asp-for="Input.Email" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Email" class="msg"></span>
            </div>
            <div>
                <label asp-for="Input.Password">Password</label>
                <input asp-for="Input.Password" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="msg"></span>
            </div>
            <div>
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="msg"></span>
            </div>
            <button id="registerSubmit" type="submit" class="btn btn-createAcc">Register</button>
            <p>
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Already have an account?</a>
            </p>
        </form>
    </div>
