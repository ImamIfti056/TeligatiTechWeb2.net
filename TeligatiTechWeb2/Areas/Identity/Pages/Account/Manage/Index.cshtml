@page
@model IndexModel
@{
    ViewData["Title"] = "Update Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<section>
    <h1>@ViewData["Title"]</h1>
    <partial name="_StatusMessage" for="StatusMessage" />
    <div>
        <div>
            <form id="profile-form" method="post" class="form-container">
                <div asp-validation-summary="ModelOnly" role="alert"></div>
                @*<div>
                    <label asp-for="Username"></label>
                    <input asp-for="Username" />
                </div>*@
                <div>
                    <label asp-for="Input.PhoneNumber"></label>
                    <input asp-for="Input.PhoneNumber" />
                    <span asp-validation-for="Input.PhoneNumber" class="msg"></span>
                </div>
                <button id="update-profile-button" type="submit" class="btn">Save</button>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
